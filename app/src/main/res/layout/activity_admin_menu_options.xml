<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.smarthealthcare.AdminMenuOptions" >



    <ScrollView
        android:id="@+id/scrollView901"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:fillViewport="true"
        android:scrollbars="horizontal|vertical" >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:alignmentMode="alignBounds"

            android:columnCount="1"
            android:columnOrderPreserved="false"
            android:orientation="vertical"
            android:rowCount="20"
            android:useDefaultMargins="true" >

            <Button
                android:id="@+id/btnAddHealthTips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="0"
                android:text="Add Health Tips" />

            <Button
                android:id="@+id/btnAddDoctorDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="1"
                android:text="Add Doctor Details"
                />



            <Button
                android:id="@+id/btnAddDiseaseInformations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="2"
                android:text="Add Disease Informations"
                />


            <Button
                android:id="@+id/btnViewHealthTips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="3"
                android:text="View Health Tips"
                />
            <Button
                android:id="@+id/btnViewDoctorDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="4"
                android:text="View Doctor Details"
                />

            <Button
                android:id="@+id/btnViewDiseaseInformations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="5"
                android:text="View Disease Informations"
                />

            <Button
                android:id="@+id/btnViewUsers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="6"
                android:text="View Users"
                />

            <Button
                android:id="@+id/btnExit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center_horizontal|top"
                android:layout_row="9"
                android:text="Exit" />



        </GridLayout>
    </ScrollView>
</RelativeLayout>



