<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myapplication.AddItemDetails" >

    
<ScrollView
        android:id="@+id/scrollView901"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    
        android:fillViewport="true"
        android:scrollbars="horizontal|vertical" >
 <GridLayout
   android:layout_width="fill_parent"
     android:layout_height="match_parent"
     android:layout_margin="2dp"
     android:alignmentMode="alignMargins"
     android:columnCount="3"
     android:columnOrderPreserved="false"
     android:padding="2dp"
     android:rowCount="16"
     android:useDefaultMargins="true" >
    
     <TextView
         android:id="@+id/textView1"
         android:layout_column="0"
         android:layout_gravity="left|top"
         android:layout_row="0"
         android:text="Product Id" />

     <TextView
         android:id="@+id/textView2"
         android:layout_column="0"
         android:layout_gravity="left|top"
         android:layout_row="1"
         android:text="Product Name" />

 	<TextView
     	android:id="@+id/textView3"
     	android:layout_column="0"
     	android:layout_gravity="left|top"
     	android:layout_row="2"
     	android:text="Quantity" />
 
   <TextView
         android:id="@+id/textView4"
         android:layout_column="0"
         android:layout_gravity="left|top"
         android:layout_row="3"
         android:text="Price" />

     <TextView
         android:id="@+id/textView5"
         android:layout_column="0"
         android:layout_gravity="left|top"
         android:layout_row="4"
         android:text="Discount %" />

 	
 		<TextView
     	android:id="@+id/textView61"
     	android:layout_column="0"
     	android:layout_gravity="left|top"
     	android:layout_row="5"
     	android:text="Unit of Measure" />
 	<TextView
     	android:id="@+id/textView7"
     	android:layout_column="0"
     	android:layout_gravity="left|top"
     	android:layout_row="6"
     	android:text="Product Image" />

     <EditText
         android:id="@+id/txtFoodId"
         android:layout_column="1"
         android:layout_columnSpan="2"
         android:layout_gravity="center_horizontal|top"
         android:layout_row="0"
         android:ems="10"
         android:inputType="textLongMessage" />
     
     <EditText
         android:id="@+id/txtFoodName"
         android:layout_column="1"
         android:layout_columnSpan="2"
         android:layout_gravity="center_horizontal|top"
         android:layout_row="1"
         android:ems="10"
         android:inputType="textLongMessage" />
     
       
 <EditText
     android:id="@+id/txtQuantity"
     android:layout_column="1"
     android:layout_columnSpan="2"
     android:layout_gravity="center_horizontal|top"
     android:layout_row="2"
     android:ems="10"/>

 <EditText
         android:id="@+id/txtPrice"
         android:layout_column="1"
         android:layout_columnSpan="2"
         android:layout_gravity="center_horizontal|top"
         android:layout_row="3"
         android:ems="10"
         android:inputType="textLongMessage" />
     
     <EditText
         android:id="@+id/txtOffer"
         android:layout_column="1"
         android:layout_columnSpan="2"
         android:layout_gravity="center_horizontal|top"
         android:layout_row="4"
         android:ems="10"
         android:inputType="textLongMessage" />
     
       
   <Spinner
         android:id="@+id/spnUOM"
         android:layout_column="1"
         android:layout_columnSpan="2"
         android:layout_gravity="center_horizontal|top"
         android:layout_row="5"
         android:ems="10"
         android:inputType="textLongMessage" />

	 <ImageView
		 android:id="@+id/image_from_camera"
		 android:layout_width="250dp"
		 android:layout_height="250dp"
		 android:layout_row="6"
		 android:layout_column="1"
		 android:layout_gravity="left|top"
		 />

     <Button
    android:id="@+id/take_image_from_camera"
    android:layout_column="0"
    android:layout_columnSpan="3"
    android:layout_gravity="center|top"
    android:layout_row="7"
		 android:background="@drawable/bgbtn"
    android:text="BROWSE" />
     
 <Button
    android:id="@+id/btnBack"
    android:layout_column="0"
    android:layout_gravity="center|top"
    android:layout_row="8"
	 android:background="@drawable/bgbtn"
    android:text="BACK" />
     <Button
         android:id="@+id/btnSave"
         android:layout_column="1"
         android:layout_gravity="left"
         android:layout_row="8"
		 android:background="@drawable/bgbtn"
         android:text="SAVE" />
     


 </GridLayout>
</ScrollView>

</RelativeLayout>
