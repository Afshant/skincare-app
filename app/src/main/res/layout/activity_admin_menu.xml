<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myapplication.AdminMenu" >

   

 <ScrollView
        android:id="@+id/scrollView108"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:fillViewport="true"
        android:scrollbars="horizontal|vertical" >

<GridLayout
    android:layout_width="302dp"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_margin="0dp"
    android:alignmentMode="alignMargins"
    
    android:columnCount="3"
    android:columnOrderPreserved="false"
    android:padding="0dp"
    android:rowCount="15"
    android:useDefaultMargins="true" >
    
    <Button
        android:id="@+id/btnAddFoodDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="0"
        android:background="@drawable/bgbtn"
        android:text="Add Product Details" />

    <Button
        android:id="@+id/btnViewFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="1"
        android:background="@drawable/bgbtn"
        android:text="View Product Details" />
    
     <Button
        android:id="@+id/btnViewFoodOrderDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="2"
         android:background="@drawable/bgbtn"
        android:text="View Order Details" />
     
     <Button
        android:id="@+id/btnFoodOrderApproval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="3"
         android:background="@drawable/bgbtn"
        android:text="Order Approval Details" />
     
       <Button
        android:id="@+id/btnViewFoodOrderApproval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="4"
           android:background="@drawable/bgbtn"
        android:text="View Approval Details" />
        
          
           <Button
        android:id="@+id/btnDeliveryDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="7"
               android:background="@drawable/bgbtn"
        android:text="Delivery Details" />
           
            <Button
        android:id="@+id/btnViewDeliveryDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="8"
                android:background="@drawable/bgbtn"
        android:text="View Delivery Details" />





    <Button
        android:id="@+id/btnViewCustomerDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="10"
        android:background="@drawable/bgbtn"
        android:text="View Customer Details" />



    <Button
        android:id="@+id/btnExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="11"
        android:background="@drawable/bgbtn"
        android:text="Exit" />

     
    
      
    </GridLayout>
 </ScrollView>

</RelativeLayout>
